          .form-group#select_term_input
            %label.control-label{for: '#select_term'}
              Term:
            .col-xs-6
              %select.form-control#select_term{required: true}
                %option{:value => -2, disabled: true, selected: true}
                - @terms.each do |term|
                  %option{:value => term.id}
